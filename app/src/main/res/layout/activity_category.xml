<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShowCategory">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speichern und Zurück"
        android:textColor="#000000"
        app:cornerRadius="7dp"
        android:backgroundTint="#C7C7C7"
        android:id="@+id/SaveAndClose"
        android:onClick="closeCategory"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Füge ein Bild ein"
        android:textColor="#000000"
        app:cornerRadius="7dp"
        android:backgroundTint="#C7C7C7"
        android:id="@+id/add_image_button"
        android:onClick="addImage"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/add_image_button"
        app:layout_constraintBottom_toTopOf="@id/SaveAndClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>